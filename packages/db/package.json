{
  "name": "@hour-tracker/db",
  "description": "Database package for ff-hour-tracker app",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "exports": {
    "./schemas/*": {
      "types": "./src/schema/*.ts",
      "default": "./dist/schema/*.js"
    },
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@neondatabase/serverless": "1.0.2",
    "drizzle-orm": "0.45.1",
    "postgres": "3.4.7"
  },
  "devDependencies": {
    "@hour-tracker/typescript-config": "workspace:*",
    "typescript": "5.9.3"
  }
}
